@model SMS.Models.MedicalInformation

@{
    ViewBag.Title = "Add Medical Information";
    Layout = "~/Views/Admin/_Admin_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-clipboard"></i>
                <span>
                    Medical Info: @Model.Student.FirstName @Model.Student.LastName
                </span>
            </div>
            <div class=" card-body ">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class=" control-label">Student ID</label>
                    
                    <div class="">
                        @Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MedSummary, htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        
                        @Html.TextAreaFor(model => model.MedSummary, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.MedSummary, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 ">
                        <input type="submit" value="Update" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details_Student",new {id = Model.StudentID })
</div>
