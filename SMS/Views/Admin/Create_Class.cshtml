@model SMS.Models.ClassGrade

@{
    ViewBag.Title = "Create Class";
    Layout = "~/Views/Admin/_Admin_Layout.cshtml";
}

<link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/plugins/select2/css/select2-bootstrap.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="card">
            <div class="card-header">
                New Class
            </div>
            <div class=" card-body ">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.GradeID, htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        @Html.EditorFor(model => model.GradeID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GradeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SubjectIDs, "Subjects", htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        @Html.ListBoxFor(model => model.SubjectIDs, (MultiSelectList)ViewBag.SubjectID, new { @class = "form-control select2", multiple = "multiple" })
                        @Html.ValidationMessageFor(model => model.SchoolID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Grade, htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 ">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<div>
    @Html.ActionLink("Back to List", "Classes")
</div>
<script src="~/Content/plugins/select2/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>